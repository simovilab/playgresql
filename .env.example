# Example environment variables
# Copy to .env if you want to customize

# Database connection (used by Django)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/playgresql

# Enable PostGIS/GIS features (requires GDAL library)
# Set to "true" in Docker, "false" for local development without GDAL
ENABLE_GIS=false

# Django settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production

# Ollama settings
# Local development: http://localhost:11435
# Docker environment: http://ollama:11434 (set automatically in docker-compose.yml)
OLLAMA_HOST=http://localhost:11435

# PostgreSQL settings (for docker-compose)
POSTGRES_DB=playgresql
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
